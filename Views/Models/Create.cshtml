@model ASPMotoDrive.Models.Model

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <h2>Създай нов модел</h2>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Модел</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Марка</label>
                <select asp-for="BrandId" class ="form-control" asp-items="ViewBag.BrandId"></select>
            </div>

           

            <div class="form-group">
                <label asp-for="CountryOfManuf" class="control-label">Държава на производство</label>
                <input asp-for="CountryOfManuf" class="form-control"></>
            </div>

            <div class="form-group">
                <label asp-for="YearOfManuf" class="control-label">Година на производство</label>
                <input asp-for="YearOfManuf" class="form-control"></input>
            </div>

            
            
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
