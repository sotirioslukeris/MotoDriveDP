@model IEnumerable<ASPMotoDrive.Models.Motorcycle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Модел
            </th>
            <th>
                Нов/Употребяван
            </th>
            <th>
                Пробег
            </th>
            <th>
                Категория
            </th>
            <th>
                #Каталожен номер
            </th>
            <th>
                Мощност
            </th>
            <th>
                Изображение
            </th>
            <th>
                Цена
            </th>
            <th>
                Мотоциклет/Скутер
            </th>
            <th>
                Описание
            </th>
            <th>
                Последни промени
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Models.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeUsage)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)км
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
            <td>
                    #@Html.DisplayFor(modelItem => item.CatalogueNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnginePower)cc
            </td>
            <td>
                    <img src="@item.ImageURL" width="200"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)лв
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeMotor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.LastUpdate);
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
