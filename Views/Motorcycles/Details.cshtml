@model ASPMotoDrive.Models.Motorcycle

@{
    ViewData["Title"] = "Details";
}



<div class="details-container">
    <div class="motorcycle-card">
        <div class="image-section">
            <img src="@Model.ImageURL" alt="@Model.Models.Name" />
        </div>

        <div class="info-section">
            <h1>@Model.Models.Brands.Name @Model.Models.Name</h1>
            <p><strong>Година на производство:</strong> @Model.Models.YearOfManuf</p>
            <p><strong>Категория:</strong> @Model.Category</p>
            <p><strong>Цвят:</strong> @Model.Colour</p>
            <p><strong>Нов/Употребяван:</strong> @Model.TypeUsage</p>
            <p><strong>Пробег:</strong> @Model.Mileage км</p>
            <p><strong>Описание:</strong> @Model.Description</p>

            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" name="MotorcycleId" value="@Model.Id" />
               
                <a href="@Url.Action("Models", "Motorcycles")" class="back-button">⬅ Обратно към списъка</a>
                <button type="submit" class="back-button"><i class="far fa-shopping-cart"></i> Добави в количката</button>
            </form>
        </div>
    </div>
</div>
