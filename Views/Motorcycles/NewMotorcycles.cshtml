@model List<ASPMotoDrive.Models.Motorcycle>
@{
    ViewData["Title"] = "NewMotorcycles";
}



<body>

    <div class="product-container">

        <section class="filter-section">
            <h2>Търси мотоциклет</h2>
            <form asp-action="Models" method="post" asp-controller="Motorcycles" class="filter-form">
                <div class="form-group">
                    <label for="brand">Марка:</label>
                    <select id="brand" action="models.cshtml" name="brand">
                        <option value="all">Всички</option>

                        <option value="Honda">
                            Honda

                        </option>
                        <option value="Yamaha">
                            Yamaha

                        </option>
                        <option value="BMW">
                            BMW

                        </option>
                        <option value="KTM">
                            KTM
                        </option>
                    </select>
                </div>



                <div class="form-group">
                    <label for="year">Година:</label>
                    <input name="year">
                </div>

                <div class="form-group">
                    <label for="price">Макс. цена(лв):</label>
                    <input type="number" id="price" name="price">


                </div>

                <button type="submit">Филтрирай</button>
            </form>
        </section>

        <div class="models heading ">
            <h1>Мотоциклети</h1>

            <div>
                @{
                    if (Model.Count == 0)
                    {
                        <h2 id="no-articles">Не бяха намерени артикули</h2>
                    }
                    else
                    {
                        <h2 id="articles">Брой намерени мотоциклети(@Model.Count)</h2>
                    }
                }
            </div>
            <section class="products">


                @{
                    foreach (var moto in Model)
                    {
                        <div class="motorcycle card">
                            <p>@moto?.Models?.Brands?.Name </p>
                            <p>@moto?.Models?.Name</p>
                            <p>@moto?.TypeUsage?</p>
                            <p>@moto?.Price</p>
                            <img id="product-image" width="200" height="133" src="@moto?.ImageURL" />
                            <p>Година : @moto?.Models?.YearOfManuf </p>
                            <a class="button-link" asp-action="Details" asp-controller="Motorcycles" asp-route-id="@moto?.Id" class="more-info">Повече информация</a>
                        </div>
                    }

                }


            </section>
        </div>
    </div>
   </body>
    

    
