@model ASPMotoDrive.Models.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Подробна информация за @Html.DisplayFor(model=>model.Name)</h1>

<div>
    <h4>Марка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <span>Марка</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <span class="heading">Описание</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактирай</a> |
    <a asp-action="Index">Обратно към списъка</a>
</div>
