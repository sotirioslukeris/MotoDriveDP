@model IEnumerable<ASPMotoDrive.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>

            <th>Потребител</th>

            <th>Мотоциклет</th>


            <th>
                Описание
            </th>

            <th>
                Брой
            </th>
            <th>
                Дата на регистрация
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                @if (item.Users != null)
                {
                    @item.Users.UserName
                }
                else
                {
                    <span>User not found</span>
                }
               </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motorcycles.Models.Name)
                </td>
               

                <td>
                    @Html.DisplayFor(modelItem => item.DateRegister)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
