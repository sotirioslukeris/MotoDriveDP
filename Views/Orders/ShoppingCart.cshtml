@model ASPMotoDrive.Models.Motorcycle
@{
    ViewData["Title"] = "ShoppingCart";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Пазарска кошница</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div class="cart-container">
        <h1>Пазарска кошница</h1>

        <div class="cart-items">
           
            <div class="cart-item" >
                <img src="@Model.ImageURL" alt="Мотоциклет">
                <div class="item-details">
                    <h2>@Model.Models.Brands.Name @Model.Models.Name</h2>
                    <p>Година: @Model.Models.YearOfManuf</p>
                    <p>Брой: @Model.Orders.</p>
                    <p>Цена: @Model.Price</p>
                    <button class="remove-btn">Премахни</button>
                </div>
            </div>

           
        

        <div class="cart-summary">
                @{
                    
                    <h3>
                         Цена :    
                    </h3>
            }
            
            <button class="checkout-btn">Поръчай</button>
        </div>
    </div>

</body>
</html>