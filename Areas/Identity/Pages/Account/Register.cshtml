
@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="registration-container">
            <form id="registerForm" class="registration-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="registration-header">Създай нов акаунт</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="registration-error" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Input.Username" class="form-control registration-input" placeholder="Потребителско име" />
                    <span asp-validation-for="Input.Username" class="registration-error"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control registration-input" placeholder="Имейл" />
                    <span asp-validation-for="Input.Email" class="registration-error"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control registration-input" placeholder="Име" required />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control registration-input" placeholder="Фамилия" required />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Age" class="form-control registration-input" type="number" min="1" max="100" placeholder="Възраст" required />
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Address" class="form-control registration-input" placeholder="Адрес" required />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control registration-input" placeholder="Телефон" required />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control registration-input" type="password" placeholder="Парола" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control registration-input" type="password" placeholder="Повтори паролата" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

               
                <button type="submit" class="registration-button">Регистрирай се!</button>
            </form>
        </div>
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
