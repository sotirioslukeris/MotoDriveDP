@page
@model LogoutModel
@{
    ViewData["Title"] = "Изход";
}

<div class="container logout mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center shadow p-5 bg-white rounded">
            <h2 class="mb-4">Сигурни ли сте, че искате да излезете?</h2>
            <form method="post">
                <button type="submit" class="btn btn-danger btn-lg">Изход</button>
                <a asp-page="/Index" class="btn btn-secondary btn-lg ml-2">Отказ</a>
            </form>
        </div>
    </div>
</div>


