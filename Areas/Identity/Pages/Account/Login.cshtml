@page
@model LoginModel;
@{
    ViewData["Title"] = "Вход";
}

<body>
    <div class="container">
        <h1 class="mt-5 mb-5 text-center">@ViewData["Title"]</h1>
        <div class="row justify-content-center">
           
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form id="account" method="post">
                            <h2>Влез в акаунта си</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Потребителско име" />
                                
                               
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Парола" />
                                
                               
                            </div>

                            <div class="checkbox mb-3">
                                <label asp-for="Input.RememberMe">
                                    <input class="form-check-input"  asp-for="Input.RememberMe" />
                                    Запомни ме
                                </label>
                            </div>

                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

                            <div class="mt-3">
                               
                                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нямаш профил? Регистрирай се тук!</a></p>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>

          
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
